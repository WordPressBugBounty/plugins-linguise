{
  "name": "linguise/wordpress-plugin",
  "description": "Linguise WordPress plugin",
  "minimum-stability": "dev",
  "license": "proprietary",
  "authors": [
    {
      "name": "Linguise",
      "email": "dev@linguise.com"
    }
  ],
  "config": {
    "preferred-install": {
      "*": "dist"
    },
    "platform-check": false,
    "allow-plugins": {
      "typisttech/imposter-plugin": true,
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "bamarni/composer-bin-plugin": true
    }
  },
  "require": {
    "linguise/script-php": "^1.3.44",
    "symfony/polyfill-intl-idn": "1.31.0",
    "symfony/polyfill-mbstring": "1.31.0",
    "typisttech/imposter-plugin": "0.6.x-dev",
    "galbar/jsonpath": "2.1"
  },
  "require-dev": {
    "ext-xdebug": "^3",
    "squizlabs/php_codesniffer": "*",
    "phpcompatibility/php-compatibility": "*",
    "wp-coding-standards/wpcs": "2.3.0",
    "dealerdirect/phpcodesniffer-composer-installer": "*",
    "phpunit/php-code-coverage": "9.2.32",
    "phpunit/phpunit": "9.6.24",
    "mockery/mockery": "1.7.x-dev",
    "gettext/gettext": "5.7.3"
  },
  "repositories": [
    {
      "name": "script-php",
      "type": "vcs",
      "url" : "git@bitbucket.org:linguise/script-php.git"
    }
  ],
  "scripts": {
    "post-autoload-dump": [
      "@php ./scripts/update-broken-path.php"
    ]
  },
  "extra": {
    "imposter": {
      "namespace": "Linguise\\Vendor",
      "excludes": ["Linguise\\Script\\Configuration","symfony/polyfill-intl-normalizer"]
    }
  }
}
